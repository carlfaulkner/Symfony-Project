{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <p class="mb-15"><a href="{{ path('app_homepage') }}">Home</a> / <a href="{{ path('app_tasks') }}">Tasks</a> / <a href="{{ path('app_task', { task_id: id }) }}">{{ title }}</a></p>
    <h1 class="mb-15">{{ title }}</h1>
    <table cellpadding="0" cellspacing="0" class="table">
        <tr>
            <td>ID</td>
            <td>{{ id }}</td>
        </tr>
        <tr>
            <td>Title</td>
            <td>{{ title }}</td>
        </tr>
        <tr>
            <td>Completed</td>
            <td>{{ completed }}</td>
        </tr>
    </table>
{% endblock %}