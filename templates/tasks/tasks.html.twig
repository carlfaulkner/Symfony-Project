{% extends 'base.html.twig' %}
{% block title %}Tasks{% endblock %}
{% block body %}
    <p class="mb-15"><a href="{{ path('app_homepage') }}">Home</a> / <a href="{{ path('app_tasks') }}">Tasks</a></p>
    <h1 class="mb-15">Tasks</h1>
    <table cellpadding="0" cellspacing="0" class="table">
        <tr>
            <th>ID</th>
            <th>Task</th>
            <th>Completed</th>
            <th></th>
        </tr>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.title }}</td>
                <td>
                    {% if task.completed == "Y" %}
                        Yes
                    {% else %}    
                        No
                    {% endif %}
                </td>
                <td class="align-right"><a href="{{ path('app_task', {task_id: task.id}) }}">view task</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}